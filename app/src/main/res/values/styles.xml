<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TopTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/bodonio</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FilterDesctiption">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/bodonio</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/bckg_btn</item>
    </style>

    <style name="SpinnerMainFr">
        <item name="android:layout_marginEnd">@dimen/default_side_margin</item>
    </style>

    <style name="FilterDesctiptionDetail">
        <item name="android:textSize">18sp</item>
        <item name="android:lines">1</item>
        <item name="android:fontFamily">@font/bodonio</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/default_side_margin</item>
    </style>

    <style name="PlainText">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:fontFamily">@font/bodonio</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SizeEditText">
        <item name="android:lines">1</item>
        <item name="android:maxLength">40</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/size</item>
    </style>

</resources>
